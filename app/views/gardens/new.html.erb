<div class="header navbar-fixed-top">
   <h3><%="What will you name your garden?" %></h3>
    <ul class="nav navbar-nav pull-right">
     <li><%= link_to "Sign Out", sign_out_path %></li>
     <li><%= link_to "New Digs", new_user_garden_path %></li>
    </ul>
</div>


<div class="container">
  <div class="well top-buffer2 col-md-6 col-md-offset-1">
    <div class="form-group Welcome-index-font">

         <%= form_for([current_user, @garden], html: {class: 'form-horizontal'}) do |f| %>

        <div class= 'form-group'>
          <div class= "row">
             <%= f.label :season_name, "garden name", class: 'col-sm-3 control-label'%>
            <div class= 'col-md-8'>
              <%= f.text_field :season_name, autofocus: :true, placeholder: "enter the name of a lovely garden", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class= "row">
            <div class= "margin-left">
              <div class="col-md-12 top-padding">
               <%= f.submit "Create", class: "signUpP", class: "btn btn-default" %>
              </div>
            </div>
          </div>


        <% end %>

    </div>
  </div>
</div>
